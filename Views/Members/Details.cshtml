@model CoronaManagementSystem.Models.MemberDetailsModel

@{
    ViewData["Title"] = "פרטים";
}

<h1>פרטי חבר קופת חולים</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StreetName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StreetName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StreetNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StreetNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mobile)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mobile)
        </dd>
        @if (Model.PositiveResultDate != null)
        {
            <div id="vaccinatedFields" style="margin-bottom: 20px;margin-top: 20px;" class="border">
                @if (Model.PositiveResultDate != null)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PositiveResultDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PositiveResultDate)
                    </dd>
                }

                @if (Model.NegativeResultDate != null)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NegativeResultDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NegativeResultDate)
                    </dd>
                }
            </div>
        }
        @if (Model.Vaccinations != null)
        {
            <lable>הסטורית חיסונים</lable>
            var count = 0;
            foreach (var v in Model.Vaccinations)
            {
                count++;
                <div class="border">
                    <dt class="col-sm-2">
                        חיסון @count
                    </dt>
                    <dd class="col-sm-10">
                        <lable>@v.VaccinationDescription</lable>
                        <br />
                        <label>@v.VaccinationDate</label>
                    </dd>
                </div>
            }
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">ערוך</a> |
    <a asp-action="Index">חזרה לרשימה</a>
</div>
